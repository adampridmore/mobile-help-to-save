{
  "type": "object",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "properties": {
    "account": {
      "type": "object",
      "$id": "/properties/account",
      "description": "The Help To Save account details",
      "isClosed": {
        "$id": "/properties/account/isClosed",
        "type": "boolean",
        "description": "Is the account closed",
        "examples": [
          "false"
        ]
      },
      "isBlocked": {
        "$id": "/properties/account/isBlocked",
        "type": "object",
        "description": "Is the account blocked",
        "properties": {
          "$id": "/properties/account/isBlocked/unspecified",
          "type": "boolean",
          "examples": [
            "false"
          ]
        }
      },
      "balance": {
        "$id": "/properties/account/balance",
        "type": "number",
        "description": "The current account balance",
        "examples": [
          20.16
        ]
      },
      "openedYearMonth": {
        "$id": "/properties/account/openedYearMonth",
        "type": "string",
        "description": "The date that the account was opened",
        "minLength": 7,
        "maxLength": 7,
        "pattern": "^[0-9]{4}-[0-9]{2}$",
        "examples": [
          "2018-01"
        ]
      },
      "paidInThisMonth": {
        "$id": "/properties/account/paidInThisMonth",
        "type": "number",
        "description": "The total money (credits) to the account this month",
        "examples": [
          5.00
        ]
      },
      "canPayInThisMonth": {
        "$id": "/properties/account/canPayInThisMonth",
        "type": "number",
        "description": "The remaining amount that can be credited to the account this month",
        "examples": [
          5.00
        ]
      },
      "maximumPaidInThisMonth": {
        "$id": "/properties/account/maximumPaidInThisMonth",
        "type": "number",
        "description": "The maximum sum allowed to be paid (credited) in a month",
        "examples": [
          50
        ]
      },
      "thisMonthEndDate": {
        "$id": "/properties/account/thisMonthEndDate",
        "type": "string",
        "description": "The date the month ends",
        "minLength": 10,
        "maxLength": 10,
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
        "examples": [
          "2018-03-31"
        ]
      },
      "bonusTerms": {
        "$id": "/properties/account/bonusTerms",
        "type": "array",
        "description": "The bonus terms applicable for the account",
        "items": {
          "$id": "/properties/account/bonusTerms/items",
          "type": "object",
          "properties": {
            "bonusEstimate": {
              "$id": "/properties/account/bonusTerms/items/properties/bonusEstimate",
              "type": "number",
              "description": "The estimated value of the bonus to be applied",
              "examples": [
                100
              ]
            },
            "bonusPaid": {
              "$id": "/properties/account/bonusTerms/items/properties/bonusPaid",
              "type": "number",
              "description": "The actual value of the bonus applied",
              "examples": [
                50
              ]
            },
            "endDate": {
              "$id": "/properties/account/bonusTerms/items/properties/endDate",
              "type": "string",
              "description": "The date the bonus term ends",
              "minLength": 10,
              "maxLength": 10,
              "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
              "examples": [
                "2019-10-31"
              ]
            },
            "bonusPaidOnOrAfterDate": {
              "$id": "/properties/account/bonusTerms/items/properties/bonusPaidOnOrAfterDate",
              "type": "string",
              "description": "The earliest date the bonus will be paid (i.e. on or after the date specified)",
              "minLength": 10,
              "maxLength": 10,
              "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
              "examples": [
                "2019-11-01"
              ]
            }
          }
        }
      }
    }
  },
  "required": [
    "account"
  ]
}
